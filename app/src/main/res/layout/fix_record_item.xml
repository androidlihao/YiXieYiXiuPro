<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="@dimen/px_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="服务日期:"
                android:textSize="@dimen/px_50"
                android:gravity="center_vertical"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/tv_serviceTime_time"
                android:layout_width="@dimen/px_500"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_w"
                android:gravity="center_vertical"
                android:hint="请输入日期"
                android:padding="@dimen/px_20"
                android:textColor="#333333"
                android:textSize="@dimen/px_50" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/btn_delete_id"
                android:layout_width="@dimen/px_100"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    android:layout_gravity="right"
                    android:src="@mipmap/ic_pic_close"
                    android:scaleType="centerCrop"
                    />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="开始时间:"
                android:textSize="@dimen/px_50"
                android:gravity="center_vertical"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/tv_startTime_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/px_50"
                android:hint="请输入时间"
                android:background="@drawable/background_button_w"
                android:gravity="center_vertical"
                android:padding="@dimen/px_20"
                />
            <TextView
                android:id="@+id/tv_fix_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="结束时间:"
                android:textSize="@dimen/px_50"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/px_10"
                />
            <TextView
                android:id="@+id/tv_endTime_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/px_50"
                android:hint="请输入时间"
                android:background="@drawable/background_button_w"
                android:gravity="center_vertical"
                android:padding="@dimen/px_20"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="路途时间:"
                android:textSize="@dimen/px_50"
                android:gravity="center_vertical"
                android:textColor="#333333"
                />

            <EditText
                android:id="@+id/tv_roadTime_id"
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_w"
                android:gravity="center"
                android:hint="0.0"
                android:inputType="numberDecimal"
                android:padding="@dimen/px_20"
                android:textColor="#333333"
                android:textSize="@dimen/px_50" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sbzt_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/px_50">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备状态:"
                android:textColor="#333333"
                android:textSize="@dimen/px_50" />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <RadioGroup
                    android:id="@+id/radioGroup_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rb_fault_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_50"
                        android:text="故障"
                        android:textColor="#333"
                        android:textSize="@dimen/px_48"
                        android:checked="true"/>
                    <RadioButton
                        android:id="@+id/rb_part_fault_id"
                        android:textColor="#333"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px_48"
                        android:text="部分故障"/>
                    <RadioButton
                        android:id="@+id/rb_normal_id"
                        android:textColor="#333"
                        android:layout_marginLeft="@dimen/px_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px_48"
                        android:text="正常"/>
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:background="#F0EEEE"/>
</LinearLayout>