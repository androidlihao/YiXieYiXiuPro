<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiankangli.knowledge.jiankang_yixiupro.activity.ForgetActivity">
    <include
        layout="@layout/toolbar"/>
    <LinearLayout
        android:id="@+id/ll_numberPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        android:layout_marginTop="@dimen/px_100"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_25"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_gravity="center"
            android:text="手机号码："
            android:textSize="14sp"
           />
        <EditText
            android:id="@+id/et_numPhone_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_55"
            android:layout_marginRight="@dimen/px_50"
            android:hint="请输入注册手机号码"
            android:textSize="14sp"
            android:maxLength="11"
            android:inputType="phone"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_AuthCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_25"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_gravity="center"
            android:text="验证码："
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/et_Auto_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_55"
            android:layout_marginRight="@dimen/px_50"
            android:hint="请输入6位验证码"
            android:textSize="14sp"
            android:maxLength="6"
            android:inputType="phone"
            />
        <TextView
            android:id="@+id/btn_AutoCode_id"
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="@dimen/px_20"
            android:layout_marginRight="@dimen/px_50"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:background="#A5D452"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_next_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_300"
        android:layout_marginRight="@dimen/px_300"
        android:layout_marginTop="@dimen/px_200"
        android:text="下一步"
        android:background="@drawable/btn_shape"
        android:textColor="@color/colorWhite"/>
</LinearLayout>
