<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F3F3">
    <include
        layout="@layout/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工程师服务记录"
        android:textColor="#3597d6"
        android:textStyle="bold"
        android:paddingLeft="@dimen/px_50"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:background="#ffffff"
        android:textSize="@dimen/px_50"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_30"
        android:background="#ffffff">
        <CheckBox
            android:id="@+id/cb_isNormal_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务结束，设备正常工作"
            android:layoutDirection="rtl"
            android:paddingLeft="@dimen/px_50"
            android:paddingTop="@dimen/px_30"
            android:paddingBottom="@dimen/px_30"
            android:textSize="@dimen/px_50"
            android:layout_marginTop="@dimen/px_1"
            />
    </FrameLayout>>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间统计"
        android:textColor="#3597d6"
        android:textStyle="bold"
        android:paddingLeft="@dimen/px_50"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:background="#ffffff"
        android:textSize="@dimen/px_50"
        android:layout_marginBottom="@dimen/px_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离开场地时间:"
            android:textColor="#333333"
            android:paddingLeft="@dimen/px_50"
            android:paddingTop="@dimen/px_30"
            android:paddingBottom="@dimen/px_30"
            android:textSize="@dimen/px_50"
            android:layout_marginTop="@dimen/px_1"
            />
        <TextView
            android:id="@+id/tv_select_date_id"
            android:layout_width="@dimen/px_500"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_50"
            android:gravity="center"
            android:textSize="@dimen/px_50"
            android:hint="请选择日期"
            />
    </LinearLayout>>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="差旅时间"
        android:textStyle="bold"
        android:textColor="#3597d6"
        android:paddingLeft="@dimen/px_50"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:background="#ffffff"
        android:textSize="@dimen/px_50"
        android:layout_marginBottom="@dimen/px_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/px_30">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="往："
                android:textColor="#333333"
                android:paddingLeft="@dimen/px_50"
                android:paddingTop="@dimen/px_30"
                android:paddingBottom="@dimen/px_30"
                android:textSize="@dimen/px_50"
                android:layout_marginTop="@dimen/px_1"
                />
            <EditText
                android:id="@+id/et_go_id"
                android:layout_width="@dimen/px_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/px_50"
                android:inputType="numberDecimal"
                android:hint="0.0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/px_50"
                android:text=" 小时"
                android:textColor="#333333"
                />
        </LinearLayout>>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返："
                android:textColor="#333333"
                android:paddingLeft="@dimen/px_50"
                android:paddingTop="@dimen/px_30"
                android:paddingBottom="@dimen/px_30"
                android:textSize="@dimen/px_50"
                android:layout_marginTop="@dimen/px_1"
                />
            <EditText
                android:id="@+id/et_back_id"
                android:layout_width="@dimen/px_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/px_50"
                android:inputType="numberDecimal"
                android:hint="0.0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/px_50"
                android:text=" 小时"
                android:textColor="#333333"
                />
        </LinearLayout>>
    </LinearLayout>>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工程师签字"
            android:textStyle="bold"
            android:textColor="#3597d6"
            android:paddingLeft="@dimen/px_50"
            android:paddingTop="@dimen/px_30"
            android:paddingBottom="@dimen/px_30"

            android:textSize="@dimen/px_50"
            android:layout_marginBottom="@dimen/px_1"/>
        <TextView
            android:id="@+id/tv_signature_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击签字"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:paddingLeft="@dimen/px_50"
            android:paddingTop="@dimen/px_30"
            android:paddingBottom="@dimen/px_30"
            android:textSize="@dimen/px_50"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/px_50"
            android:layout_marginBottom="@dimen/px_1"/>
    </RelativeLayout>>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"
        android:background="#ffffff"
        android:layout_marginBottom="@dimen/px_1"
        >
        <ImageView
            android:id="@+id/iv_signature_id"
            android:layout_width="@dimen/px_800"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/px_50"
            />
    </FrameLayout>>
    <Button
        android:id="@+id/btn_save_order_id"
        android:layout_width="@dimen/px_440"
        android:layout_height="@dimen/px_120"
        android:background="@drawable/submit_seleter"
        android:gravity="center"
        android:text="保存工单"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_80"
        android:textColor="#ffffff"
        android:textSize="@dimen/px_48" />
</LinearLayout>