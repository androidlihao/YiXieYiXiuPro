<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_150"
                    android:text="工程师服务记录"
                    android:textSize="@dimen/px_60"
                    android:gravity="center_vertical"
                    android:textColor="#04b7ff"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/px_30"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_150"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingRight="@dimen/px_30"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/px_50">
                    <TextView
                        android:id="@+id/tv_fix_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="到达场地时间:"
                        android:textSize="@dimen/px_60"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        />
                    <TextView
                        android:id="@+id/tv_arrivalTime_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="@dimen/px_60"
                        android:hint="请输入日期"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:padding="@dimen/px_20"
                        android:layout_marginLeft="@dimen/px_70"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_150"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="@dimen/px_350"
                        android:layout_height="match_parent"
                        android:text="故障类型:"
                        android:textSize="@dimen/px_60"
                        android:textColor="#333333"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px_30"
                        />
                    <RadioGroup
                        android:id="@+id/rg_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px_100"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <RadioButton
                            android:id="@+id/rb_soft_id"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="软件"
                            android:textColor="#333"
                            android:textSize="@dimen/px_48"
                            />
                        <RadioButton
                            android:id="@+id/rb_Hardware_id"
                            android:textColor="#333"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/px_48"
                            android:text="硬件"/>
                        <RadioButton
                            android:id="@+id/rb_soft_Hard_id"
                            android:textColor="#333"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/px_48"
                            android:text="软件和硬件"/>
                    </RadioGroup>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_ServiceRecode_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/px_50"
                    android:nestedScrollingEnabled="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_300"
                     >
                    <Button
                        android:id="@+id/btn_addServiceRecode_id"
                        android:layout_width="@dimen/px_440"
                        android:layout_height="@dimen/px_120"
                        android:background="@drawable/submit_seleter"
                        android:gravity="center"
                        android:text="添加服务记录"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_48" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

</LinearLayout>