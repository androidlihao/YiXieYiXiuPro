<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jiankangli.knowledge.jiankang_yixiupro.activity.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:background="#04b7ff"
        android:minHeight="?attr/actionBarSize"
         >
        <RelativeLayout
            android:id="@+id/rl_head_id"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="@dimen/px_50"
            android:layout_gravity="right"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_touxiang_id"
                android:layout_width="@dimen/px_120"
                android:layout_height="@dimen/px_120"
                android:src="@mipmap/home_touxiang"
                />
            <ImageView
                android:id="@+id/iv_online_statu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/online"
                android:layout_alignBottom="@+id/iv_touxiang_id"
                android:layout_alignRight="@+id/iv_touxiang_id"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_load_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_700"
                    app:image_scale_type="center_crop"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_200"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/view_repaid_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_100"
                            android:src="@mipmap/repair"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="维修工单"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="@dimen/px_20"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="@color/colorgray"/>
                    <LinearLayout
                        android:id="@+id/view_upkeep_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_100"
                            android:src="@mipmap/upkeep"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="保养工单"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="@dimen/px_20"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_3"
                    android:background="@color/colorgray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_200"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/view_polling_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_100"
                            android:src="@mipmap/polling"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="巡检工单"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="@dimen/px_20"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="@color/colorgray"/>
                    <LinearLayout
                        android:id="@+id/view_part_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/px_100"
                            android:layout_height="@dimen/px_100"
                            android:src="@mipmap/part"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="备件详情"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="@dimen/px_20"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/px_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_3"
                    android:background="@color/colorgray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px_15"
                    android:paddingBottom="@dimen/px_15"
                    android:paddingLeft="@dimen/px_50"
                    android:text="待办事项"
                    android:textColor="#04b7ff"
                    android:textSize="@dimen/px_60"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_msg_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
