<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F3F3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1000"
            android:background="@null"
            android:hint="请输入服务原因，不超过2000字"
            android:gravity="left"
            android:paddingTop="@dimen/px_50"
            android:paddingBottom="@dimen/px_50"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxEms="2000"/>
        <TextView
            android:id="@+id/tv_count_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/2000"
            android:gravity="right"
            android:paddingRight="@dimen/px_20"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_photo_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_20"/>
    </LinearLayout>>
</LinearLayout>