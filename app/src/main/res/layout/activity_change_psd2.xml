<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <include
        layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_100"
            android:layout_marginRight="@dimen/px_100"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_38"
                android:text="原密码"
                android:textColor="#999999"
                android:textSize="@dimen/px_36" />

            <EditText
                android:id="@+id/set_et_psw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#d5d5d5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px_48" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_30"
                android:background="#66999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_38"
                android:text="新密码"
                android:textColor="#999999"
                android:textSize="@dimen/px_36" />

            <EditText
                android:id="@+id/set_et_new_psw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#d5d5d5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px_48" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_30"
                android:background="#66999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_38"
                android:text="确认新密码"
                android:textColor="#999999"
                android:textSize="@dimen/px_36" />

            <EditText
                android:id="@+id/set_et_psw_more"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:background="@null"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textColorHint="#d5d5d5"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/px_48" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginTop="@dimen/px_30"
                android:background="#66999999" />

            <TextView
                android:id="@+id/set_submit"
                android:layout_width="@dimen/px_740"
                android:layout_height="@dimen/px_120"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_180"
                android:background="@drawable/submit_seleter"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="@dimen/px_48" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>