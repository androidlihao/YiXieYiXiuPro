<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.jiankangli.knowledge.jiankang_yixiupro.activity.ChangPsdActivity">
    <include
        layout="@layout/toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_200"
                android:layout_marginTop="@dimen/px_100"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/px_300"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/px_25"
                    android:layout_marginLeft="@dimen/px_50"
                    android:layout_gravity="center"
                    android:text="新密码："
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_newPsd_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px_55"
                    android:layout_marginRight="@dimen/px_50"
                    android:hint="请输入新密码"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:inputType="textPassword"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_200"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/px_300"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/px_25"
                    android:layout_marginLeft="@dimen/px_50"
                    android:layout_gravity="center"
                    android:text="确认密码："
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_newPsdToo_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px_55"
                    android:layout_marginRight="@dimen/px_50"
                    android:hint="请确认密码"
                    android:textSize="14sp"
                    android:maxLength="6"
                    android:inputType="textPassword"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btn_submit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_300"
                android:layout_marginRight="@dimen/px_300"
                android:layout_marginTop="@dimen/px_200"
                android:text="确定"
                android:background="@drawable/btn_shape"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:indicator="BallBeat"
                app:indicator_color="#1390ea" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
