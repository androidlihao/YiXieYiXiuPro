<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/px_30"
    android:layout_marginRight="@dimen/px_30"
    android:layout_marginTop="@dimen/px_10"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_other"
            android:layout_width="@dimen/px_140"
            android:layout_height="@dimen/px_140"
            android:src="@mipmap/home_touxiang"
            />

        <TextView
            android:id="@+id/tv2_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/theme_left"
            android:lineSpacingExtra="@dimen/px_20"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:text="哈哈哈哈哈哈哈哈"
            android:textSize="@dimen/px_42" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv2_time"
        android:layout_marginTop="@dimen/px_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_210"
        android:text="2015-11-5 13:45:36"
        android:textColor="#999999"
        android:textSize="@dimen/px_36" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_60" />

</LinearLayout>