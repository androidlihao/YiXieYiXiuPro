<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/> 
    <TextView
        android:id="@+id/tv_workOrder_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查看工单详情"
        android:textColor="#F31717"
        android:textStyle="bold"
        android:textSize="@dimen/px_60"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginTop="@dimen/px_120"
        android:gravity="bottom"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_180"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_180"
            android:text="工单查询码:  "
            android:textColor="#333333"
            android:textSize="@dimen/px_60"
            android:paddingLeft="@dimen/px_50"
            android:gravity="bottom"/>
        <TextView
            android:id="@+id/tv_queryCode_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_180"
            android:textColor="#333333"
            android:textSize="@dimen/px_60"
            android:paddingLeft="@dimen/px_50"
            android:gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_180"
        android:gravity="bottom"
        android:paddingLeft="@dimen/px_50"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户电话:  "
            android:textColor="#333333"
            android:textSize="@dimen/px_60"
            />
        <EditText
            android:id="@+id/et_kh_phone_id"
            android:layout_width="@dimen/px_400"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_60"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:textColor="#333333"
            android:background="@drawable/background_button_w"
            android:padding="@dimen/px_10"/>
        <TextView
            android:id="@+id/tv_kh_sendMsg_id"
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_60"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:gravity="center"
            android:background="@drawable/background_button_w"
            android:text="发送短信"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/px_30"/>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_180"
        android:gravity="bottom"
        android:paddingLeft="@dimen/px_50"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售电话:  "
            android:textColor="#333333"
            android:textSize="@dimen/px_60"
            />
        <EditText
            android:id="@+id/et_xs_phone_id"
            android:layout_width="@dimen/px_400"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_60"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:textColor="#333333"
            android:background="@drawable/background_button_w"
            android:padding="@dimen/px_10"/>
        <TextView
            android:id="@+id/tv_xs_sendMsg_id"
            android:layout_width="@dimen/px_300"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_60"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:background="@drawable/background_button_w"
            android:text="发送短信"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/px_30"/>
    </LinearLayout>>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300"
        android:gravity="bottom"
        android:paddingLeft="@dimen/px_50"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_workOrder_Evaluation_id"
            android:layout_width="@dimen/px_440"
            android:layout_height="@dimen/px_120"
            android:background="@drawable/submit_seleter_2"
            android:gravity="center"
            android:text="查看评价状态"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_48" />
        <TextView
            android:id="@+id/tv_workOrder_Evaluation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_60"
            android:inputType="textPhonetic"
            android:text="未评价"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/px_50"
            android:padding="@dimen/px_10"/>
    </LinearLayout>>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300"
        android:layout_gravity="bottom"
        android:background="@color/colorgray"
        >
        <Button
            android:id="@+id/btn_submit_id"
            android:layout_width="@dimen/px_440"
            android:layout_height="@dimen/px_120"
            android:background="@drawable/submit_seleter3"
            android:gravity="center"
            android:enabled="false"
            android:text="提交审核"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/px_48" />
    </RelativeLayout>>
</LinearLayout>