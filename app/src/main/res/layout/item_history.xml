<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_his_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px_150"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_delete_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pic_close"
            android:layout_gravity="center_vertical"
            android:paddingRight="@dimen/px_50"
            android:paddingLeft="@dimen/px_50"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="#F1EEEE"/>
</LinearLayout>