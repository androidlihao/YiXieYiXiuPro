<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:background="#FBF6F6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="@dimen/px_400"
            android:layout_height="@dimen/px_150"
            android:text="备件名称"
            android:textColor="#333333"
            android:background="@color/white"
            android:textSize="@dimen/px_60"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_90"
            />
        <EditText
            android:id="@+id/et_spartName_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/px_60"
            android:textColor="#333333"
            android:gravity="center|left"
            android:background="@null"
            android:hint="请输入"
            android:layout_marginLeft="@dimen/px_100"
            android:padding="@dimen/px_20"
            android:imeOptions="actionSearch"/>
        <FrameLayout
            android:id="@+id/btn_delete_id"
            android:layout_width="@dimen/px_100"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_pic_close"
                android:scaleType="centerCrop"
                />
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:background="#FBF6F6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px_5"
        android:background="@color/white">
        <TextView
            android:layout_width="@dimen/px_400"
            android:layout_height="@dimen/px_150"
            android:text="备件编号"
            android:textColor="#333333"
            android:background="@color/white"
            android:textSize="@dimen/px_60"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_90"
            />
        <EditText
            android:id="@+id/et_spartNo_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/px_60"
            android:textColor="#333333"
            android:gravity="center|left"
            android:background="@null"
            android:hint="请输入"
            android:layout_marginLeft="@dimen/px_100"
            android:padding="@dimen/px_20"
            android:imeOptions="actionSearch"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:background="#FBF6F6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px_5"
        android:background="@color/white">
        <TextView
            android:layout_width="@dimen/px_400"
            android:layout_height="@dimen/px_150"
            android:text="数量"
            android:textColor="#333333"
            android:background="@color/white"
            android:textSize="@dimen/px_60"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_90"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/et_count_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/px_60"
            android:textColor="#333333"
            android:gravity="center|left"
            android:background="@null"
            android:inputType="number"
            android:hint="请输入"
            android:layout_marginLeft="@dimen/px_100"
            android:padding="@dimen/px_20"
            android:imeOptions="actionSearch"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:background="#FBF6F6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/px_5"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="@dimen/px_400"
            android:layout_height="@dimen/px_150"
            android:text="备注"
            android:textColor="#333333"
            android:background="@color/white"
            android:textSize="@dimen/px_60"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/px_20"
            android:paddingBottom="@dimen/px_20"
            android:paddingLeft="@dimen/px_90"
            />
        <EditText
            android:id="@+id/et_remark_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/px_60"
            android:textColor="#333333"
            android:gravity="center|left"
            android:background="@null"
            android:hint="请输入"
            android:layout_marginLeft="@dimen/px_100"
            android:padding="@dimen/px_20"
            android:imeOptions="actionSearch"/>
    </LinearLayout>

</LinearLayout>