<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_hosptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30"
            android:text="北京协和医院"
            android:textColor="#333333"
            android:textSize="@dimen/px_48" />
        <TextView
            android:id="@+id/tv_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hosptionName"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_34"
            android:lineSpacingExtra="@dimen/px_21"
            android:textColor="#333333"
            android:textSize="@dimen/px_42" />
        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sn"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:lineSpacingExtra="@dimen/px_21"
            android:textColor="#999999"
            android:textSize="@dimen/px_42" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_60"
                android:scaleType="centerCrop"
                android:background="@mipmap/joblist_awm" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:text="等待维修"
                android:textColor="#7cbfea"
                android:textSize="@dimen/px_48" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_30"
            android:layout_below="@id/tv_times"
            android:background="#f1f1f1" />
    </RelativeLayout>

</RelativeLayout>