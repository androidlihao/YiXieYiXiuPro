<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:background="#04b7ff"
        android:minHeight="?attr/actionBarSize"
        >
        <RelativeLayout
            android:id="@+id/rl_head_id"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="@dimen/px_50"
            android:layout_gravity="right"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_save_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_150"
                        android:orientation="horizontal"
                        android:background="@color/white"
                       >
                        <TextView
                            android:layout_width="@dimen/px_350"
                            android:layout_height="match_parent"
                            android:text="工程师工号:"
                            android:textSize="@dimen/px_60"
                            android:gravity="center_vertical"
                            android:textColor="#04b7ff"
                            android:layout_marginLeft="@dimen/px_30"
                            />
                        <TextView
                            android:id="@+id/tv_workNumber_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/px_60"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/px_100"
                            android:padding="@dimen/px_20"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_150"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        >
                        <TextView
                            android:layout_width="@dimen/px_350"
                            android:layout_height="match_parent"
                            android:text="备件信息:"
                            android:textSize="@dimen/px_60"
                            android:gravity="center_vertical"
                            android:textColor="#04b7ff"
                            android:layout_marginLeft="@dimen/px_30"
                            />
                        <TextView
                            android:id="@+id/tv_accessoryName_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/px_60"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/px_100"
                            android:padding="@dimen/px_20"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_150"
                        android:paddingLeft="@dimen/px_30"
                        android:paddingRight="@dimen/px_30"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/px_50">
                        <TextView
                            android:id="@+id/tv_fix_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="到达场地时间:"
                            android:textSize="@dimen/px_60"
                            android:gravity="center_vertical"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:id="@+id/tv_arrivalTime_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textSize="@dimen/px_60"
                            android:hint="请输入日期"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:padding="@dimen/px_20"
                            android:layout_marginLeft="@dimen/px_70"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_ServiceRecode_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/px_50"
                        android:nestedScrollingEnabled="false"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_300"
                    android:background="@color/colorgray" >
                    <Button
                        android:id="@+id/btn_addServiceRecode_id"
                        android:layout_width="@dimen/px_440"
                        android:layout_height="@dimen/px_120"
                        android:background="@drawable/submit_seleter"
                        android:gravity="center"
                        android:text="添加服务记录"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px_48" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>