<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_title_id"
        android:layout_width="@dimen/px_1000"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_35"
        android:text="是否恢复设备序号为\n7000000003的数据"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#333333"
        android:background="@color/colorWhite"
        />
    <Button
        android:id="@+id/tv_recover_id"
        android:layout_width="@dimen/px_1000"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_35"
        android:text="恢复"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#198CD8"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/px_5"
        />
    <Button
        android:id="@+id/tv_delete_id"
        android:layout_width="@dimen/px_1000"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_35"
        android:layout_marginTop="@dimen/px_5"
        android:text="删除数据"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#E41616"
        android:background="@color/colorWhite"
        />
    <Button
        android:id="@+id/tv_cancel_id"
        android:layout_width="@dimen/px_1000"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_35"
        android:text="取消"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#198CD8"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/px_5"
        />
</LinearLayout>